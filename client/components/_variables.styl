/* Typography */
$font-primary = 'Helvetica Neue', 'Calibri Light', Roboto, sans-serif

$font-color-primary = #4A4A4A
$font-color-secondary = #fff

/* Colors */
$color-primary = #005a6b
$color-secondary = #429321
$color-tertiary = #B4ED50

/* Layout */
$max-width = 1280px

/* mediaqueries */
$width--mobile = 675px
$width--tablet = 1038px

$height--short = 600px

$mobile = '(max-width: ' + ($width--mobile - 1) + ')'
$not-mobile = '(min-width: ' + ($width--mobile) + ')'
$tablet = '(min-width: ' + ($width--mobile) + ') and (max-width: ' + ($width--tablet - 1) + ')'
$desktop = '(min-width: ' + $width--tablet + ')'
$desktop--large = '(min-width: 1280px)'
