.about
  background #fff
  font-weight 400
  overflow-wrap break-word
  padding 0 24px
  position relative
  word-wrap break-word
  word-break break-word
  z-index 300

  .content
    max-width 720px

  h1
  h2
    color $color-secondary
    font-size 36px
    font-weight 400
    margin 50px 0 20px

  ul
    list-style none
    margin 0
    padding 0

  li
    margin 0 0 5px
    padding 0

  p
    margin 0 0 12px

  a
    border-bottom solid 1px rgba(#fff, .9)
    border-color inherit
    color inherit
    opacity 1
    text-decoration none
    transition border .3s ease-in

    &:hover
    &:focus
      border-bottom-color rgba(#fff, .6)
      transition border .3s ease-out
