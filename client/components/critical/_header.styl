/*=============================================
=            Header                           =
=============================================*/
.main-app
  background-image linear-gradient(-179deg, #005A6B 0%, #0087A0 26%, #33C3DD 57%, #99E1EE 100%)
  height calc(100vh - 120px)
  max-height 725px
  padding 12px 20px
  position relative

/*=============================================
=            Navigation                       =
=============================================*/
.main-nav
  position absolute
  right 24px
  top 2px

  a
    color #fff
    display inline-block
    font-weight 500
    margin 0 0 0 8px
    text-decoration none
    vertical-align middle

/*=============================================
=            Intro copy                       =
=============================================*/
.intro
  color $color-secondary
  position relative
  z-index 200

  a
    color $color-secondary
    font-weight 700

  > p
    margin-left 24px
    margin-right 24px
    padding-bottom 14px
    position relative

    &:after
      background repeating-linear-gradient(to right, $color-secondary, $color-secondary 2px, transparent 2px,transparent 5px)
      content ''
      height 1px
      left -24px
      position absolute
      right -24px
      top 100%

.main-header
  background $color-tertiary
  color $font-color-secondary
  padding 0 24px 14px

.main-title
  max-width 192px

  img
    height auto
    width 100%

.strapline
  font-size 12px
  font-weight 300

/*=============================================
=            Stats                       =
=============================================*/
.stats
  color $font-color-secondary
  font-weight 200
  left 10px
  line-height 16px
  max-width 200px
  position absolute
  top 4px
  transition all .3s ease-out
  z-index 200

  &__equivalent
    margin-top 4px

.large-copy
  font-size 28px
  line-height 36px

.offline-message
  background rgba($color-secondary, .8)
  border-radius 0 0 5px 5px
  color #fff
  left 50%
  opacity 0
  padding 6px 10px
  position fixed
  top 0
  transform translateX(-50%)
  transition all .3s ease-in
  visibility hidden
  z-index 200

  &.visible
    opacity 1
    transition all .3s ease-out
    visibility visible
